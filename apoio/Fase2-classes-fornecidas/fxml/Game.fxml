<VBox alignment="CENTER" prefHeight="452.0" prefWidth="504.0"
    spacing="20.0" xmlns="http://javafx.com/javafx/8"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="GameController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <GridPane fx:id="gridPane" alignment="CENTER">
        </GridPane>
        <GridPane alignment="CENTER">
        	<HBox spacing="10.0">
        		<Button fx:id="back" mnemonicParsing="false" onMouseClicked="#back" text="Back" />
            	<TextField fx:id="guessInput" maxWidth="-Infinity" />
            	<Button fx:id="checkGuess" mnemonicParsing="false" onMouseClicked="#checkGuess" text="Check" />
            	<Button fx:id="reset" mnemonicParsing="false" onMouseClicked="#reset" text="Reset"/>
        	</HBox>
        </GridPane>
    </children>
</VBox>
